<h1><%= @fixture[:player1] %> vs.	<%= @fixture[:player2] %></h1>

<p>Update details</p>
<%= form_for @fixture_record do |f| %>
	<%= f.label :start_time, "Start time" %>
	<%= f.text_field :start_time, discard_seconds: true, class: 'datetimepicker' %><br>

	<%= f.label :location, "Location" %>
	<%= f.text_field :location %><br>

	<%= f.label :referee, "Referee" %>
	<%= f.text_field :referee %><br>

  <%= f.submit "Update" %>
<% end %>

 
<p>Match <%= @fixture[:game_number] %> of <%= link_to @tournament.name, @tournament %></p>

<% if @fixture[:completed] %>
	<p>Final score: </p>
	<p><%= @fixture[:player1] %> <%= @fixture[:player1_score] %> -
		<%= @fixture[:player2_score] %> <%= @fixture[:player2] %></p>
	<% if @fixture[:draw] %>
		<p>The match ended in a draw.</p>
	<% else %>
		<p><%= @fixture[:winner] %> won.</p>
	<% end %>
<% elsif !(@fixture[:player1_id].blank? || @fixture[:player1_id].blank?) %>
	<p>Not yet played</p>
<% end %>