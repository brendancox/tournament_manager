<table class="table">
	<tr>
		<th>Position</th>
		<th>Team Name</th>
		<th>Games Played</th>
		<th>Wins</th>
		<th>Draws</th>
		<th>Losses</th>
		<th>For</th>
		<th>Against</th>
		<th>Difference</th>
		<th>Points</th>
	</tr>
	<% standings.each do |standing| %>
		<tr>
			<td><%= standing.placing %><% if standing.equal_placing == true %>=<% end %></td>
			<td><%= standing.team.name %></td>
			<td><%= standing.games_played %></td>
			<td><%= standing.wins %></td>
			<td><%= standing.draws %></td>
			<td><%= standing.losses %></td>
			<td><%= standing.for %></td>
			<td><%= standing.against %></td>
			<td><%= standing.difference %></td>
			<td><%= standing.points %></td>
		</tr>
	<% end %>
</table>
